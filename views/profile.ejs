<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="description" content="This is where your description goes">
  <meta name="keywords" content="one, two, three">

  <title>PROFILE PAGE</title>

  <!-- external CSS link -->
  <link rel="stylesheet" href="/css/reset.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
  <header>
    <ul>
      <li><a href="/recallTests/getActiveRecallTest">Active Recall Test</a></li>
      <li><a href="/reactionTests/getReactionTest">Reaction Test</a></li>
      <li><a href="/logout" class="logoutButton">Logout</a></li>
      <li class="profileImg"><i class="bi bi-person-circle"></i></li>
    </ul>
  </header>
  <main>
    <!--sample chart for progress-->
    <div>
      <h1>(User)'s Progress</h1>
    </div>
    <div class="chartContainer">
      <img src="css/img/chart.webp" alt="sample chart" class="sampleChart">
    </div>

  </main>

  <section>
    <% if(!scores.length) {%>
      <form action="/reactionTests/createReactionTest" method="POST">
        <h3>SCORE SAVING HAS NOT BEEN ENABLED FOR REACTION TEST</h3>
        <button>Save Reaction Scores</button>
      </form>
      <% } %>
        <% for(var i=0; i<scores.length; i++) {%>
          <li>
            <span>Reaction Scores:</span>
            <span>
              <%= scores[i].scores %>
            </span>
            <form action="/reactionTests/deleteReactionTestScore/<%= scores[i].id %>?_method=DELETE" method="POST">
              <button class="deleteReactionScoreButton">Delete Scores</button>
            </form>
          </li>
          <% } %>
            </ul>
  </section>

  <script type="text/javascript" src="js/profile.js"></script>
</body>

</html>
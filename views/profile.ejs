<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="description" content="This is where your description goes">
  <meta name="keywords" content="one, two, three">

  <title>PROFILE PAGE</title>

  <!-- external CSS link -->
  <link rel="stylesheet" href="/css/reset.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
  <header>
    <ul>
      <li><a href="/recallTests/getActiveRecallTest">Active Recall Test</a></li>
      <li><a href="/reactionTests/getReactionTest">Reaction Test</a></li>
      <li><a href="/logout" class="logoutButton">Logout</a></li>
      <li class="profileImg"><i class="bi bi-person-circle"></i></li>
    </ul>
  </header>
  <main>
    <!--sample chart for progress-->
    <div>
      <h1>(User)'s Progress</h1>
    </div>
    <div class="chartContainer">
      <img src="css/img/chart.webp" alt="sample chart" class="sampleChart">
    </div>

  </main>

<section class="container text-center">
  <div class="row align-items-start">
    <div class="col">
      <h2>Active Recall Stats</h2>
      <% if(!recallTest.length) {%>
        <h4>No Stats Yet - Take a Test to record progress!</h4>
        <% } %>
          <% for(var i=0; i<recallTest.length; i++) {%>
            <h3>All Scores (Easy):</h3>
            <p>
              <%= recallTest[i].easyScores %>
            </p>
            <h3>High Score (Easy): <span><%= recallTest[i].easyHighScore %></span></h3>
            <h3>All Scores (Medium):</h3>
            <p>
              <%= recallTest[i].mediumScores %>
            </p>
            <h3>High Score (Medium): <span><%= recallTest[i].mediumHighScore %></span></h3>
            <h3>All Scores (Hard):</h3>
            <p>
              <%= recallTest[i].hardScores %>
            </p>
            <h3>High Score (Hard): <span><%= recallTest[i].hardHighScore %></span></h3>
            <h3>All Scores (Expert):</h3>
            <p>
              <%= recallTest[i].expertScores %>
            </p>
            <h3>High Score (Expert): <span><%= recallTest[i].expertHighScore %></span></h3>
            <h3>All Scores (Impossible):</h3>
            <p>
              <%= recallTest[i].impossibleScores %>
            </p>
            <h3>High Score (Impossible): <span><%= recallTest[i].impossibleHighScore %></span></h3>
            <form action="/recallTests/deleteRecallTestScore/<%= recallTest[i].id %>?_method=DELETE" method="POST">
              <button class="deleteRecallScoreButton">Delete Progress</button>
            </form>
            <% } %>
    </div>
    <div class="col">
      <h2>Reaction Stats</h2>
      <% if(!reactionTest.length) {%>
        <h4>No Stats Yet - Take a Test to record progress!</h4>
        <% } %>
          <% for(var i=0; i<reactionTest.length; i++) {%>
            <h3>All Scores:</h3>
            <p>
              <%= reactionTest[i].scores %>
            </p>
            <h3>High Score: <span><%= reactionTest[i].highScore %></span></h3>
            <form action="/reactionTests/deleteReactionTestScore/<%= reactionTest[i].id %>?_method=DELETE" method="POST">
              <button class="deleteReactionScoreButton">Delete Progress</button>
            </form>
            <% } %>
    </div>
    <div class="col">
      <h2>Test 3 Stats</h2>
    </div>
  </div>
</section>

</body>

</html>